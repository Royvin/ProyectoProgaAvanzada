@model ProyectoPograAvanzada.Models.Reseñas

@{
    ViewBag.Title = "Crear Reseña";
}

<h2 class="text-center text-primary">Añadir Reseña</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container p-4" style="background-color: #f0f8ff; border-radius: 10px;">
        <h4 class="text-primary">Detalles de la Reseña</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "form-label fw-bold text-primary" })
            @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control border-primary" } })
            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "form-label fw-bold text-primary" })
            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control border-primary", rows = 4 })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Calificacion, htmlAttributes: new { @class = "form-label fw-bold text-primary" })
            @Html.DropDownListFor(model => model.Calificacion, new SelectList(new[] { 1, 2, 3, 4, 5 }), new { @class = "form-select border-primary" })
            @Html.ValidationMessageFor(model => model.Calificacion, "", new { @class = "text-danger" })
        </div>

        @Html.HiddenFor(model => model.IdProducto) 

        <div class="text-center">
            <input type="submit" value="Añadir Reseña" class="btn btn-primary" />
        </div>
    </div>
}

<div class="text-center mt-3">
    @Html.ActionLink("Volver a la lista", "Index", "Productoes", null, new { @class = "btn btn-outline-success" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
