@model ProyectoPograAvanzada.Models.Producto

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center text-warning">Editar Producto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container p-4" style="background-color: #f5f5dc; border-radius: 10px;">
        <h4 class="text-success">Detalles del Producto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdProducto)

        <div class="mb-3">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label fw-bold text-success" })
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control border-success" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "form-label fw-bold text-success" })
            @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control border-success" } })
            @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.CantidadaDisponible, htmlAttributes: new { @class = "form-label fw-bold text-success" })
            @Html.EditorFor(model => model.CantidadaDisponible, new { htmlAttributes = new { @class = "form-control border-success" } })
            @Html.ValidationMessageFor(model => model.CantidadaDisponible, "", new { @class = "text-danger" })
        </div>

        <div class="text-center">
            <input type="submit" value="Guardar" class="btn btn-warning" />
        </div>
    </div>
}

<div class="text-center mt-3">
    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-success" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}