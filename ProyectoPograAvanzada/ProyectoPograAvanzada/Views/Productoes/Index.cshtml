@model IEnumerable<ProyectoPograAvanzada.Models.Producto>

@{
    ViewBag.Title = "Lista de Productos";
}

<style>
    .custom-celeste {
        background-color: #87CEEB !important; /* Color celeste */
        border-color: #5DADE2 !important;
    }

    .text-celeste {
        color: #5DADE2 !important;
    }

    .btn-celeste {
        background-color: #5DADE2 !important;
        border-color: #3498DB !important;
        color: white !important;
    }

        .btn-celeste:hover {
            background-color: #3498DB !important;
            border-color: #2E86C1 !important;
        }
</style>

<h2 class="text-center text-celeste fw-bold">Lista de Productos</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="text-center mb-3">
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-celeste" })
</div>

<div class="container p-4 shadow-lg bg-light rounded">
    <table class="table table-striped table-hover">
        <thead class="custom-celeste text-white">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Precio)</th>
                <th>@Html.DisplayNameFor(model => model.CantidadaDisponible)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                    <td>@Html.DisplayFor(modelItem => item.CantidadaDisponible)</td>
                    <td class="text-center">
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdProducto }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdProducto }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdProducto }, new { @class = "btn btn-danger btn-sm" })
                        @Html.ActionLink("Añadir al Carrito", "AnadirCarrito", "Carrito", new { id = item.IdProducto }, new { @class = "btn btn-celeste btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
