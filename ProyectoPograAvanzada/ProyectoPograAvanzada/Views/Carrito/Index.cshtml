@model List<ProyectoPograAvanzada.Models.CarritoItem>

@{
    ViewBag.Title = "Carrito de Compras";
}

<h2 class="text-center text-success">Carrito de Compras</h2>

<table class="table table-striped table-hover">
    <thead class="table-success">
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Precio</td>
                <td>@item.Cantidad</td>
                <td>@item.Total</td>
                <td>
                    @Html.ActionLink("Eliminar", "EliminarDeCarrito", new { id = item.ProductoId }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    @Html.ActionLink("Proceder al Pago", "Checkout", null, new { @class = "btn btn-success" })
</div>